<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/blue_box"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/ll_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:background="@drawable/round_background_light"
                        android:padding="16dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_transaction_detail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Detail \nTransaksi"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="16dp"
                                android:layout_marginTop="16dp"
                                android:background="@color/colorAccent"
                                android:orientation="vertical"></LinearLayout>

                            <TextView
                                android:id="@+id/label_sell_unit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Jumlah asset investasi yang dijual (dalam Rp)"
                                android:textColor="@color/colorPrimary" />

                            <EditText
                                android:id="@+id/tv_net_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Masukan Jumlah Reksadana"
                                android:inputType="number"
                                android:textSize="16dp" />

                            <CheckBox
                                android:id="@+id/cb_all"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Jual Semua Reksadana Ini" />

                            <TextView
                                android:id="@+id/label_sell_unit2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Harga Jual"
                                android:textColor="@color/colorPrimary" />

                            <EditText
                                android:id="@+id/tv_sell_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Masukan Harga Jual Produk"
                                android:inputType="number"
                                android:textSize="16dp" />

                        </LinearLayout>

                    </RelativeLayout>

                    <Button
                        android:id="@+id/bt_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/button_style_default"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:text="Lanjut"
                        android:textColor="#FFF" />

                    <TextView
                        android:id="@+id/bt_before"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="6dp"
                        android:text="kembali sebelumnya"
                        android:textAlignment="center" />

                </LinearLayout>


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

</FrameLayout>
