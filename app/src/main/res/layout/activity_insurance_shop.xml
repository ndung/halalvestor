<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/blue_box"
        android:orientation="vertical"></LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iv_finish"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toEndOf="@+id/iv_finish"
                android:layout_toRightOf="@+id/iv_finish"
                android:layout_weight="1"
                android:paddingLeft="6dp"
                android:text="Toolbar"
                android:textAllCaps="true"
                android:textColor="#FFF"
                android:textSize="14dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_sort_toolbar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_sort_toolbar" />

            <ImageView
                android:id="@+id/iv_search_toolbar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/iv_sort_toolbar"
                android:layout_toStartOf="@+id/iv_sort_toolbar"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_search_toolbar" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="30dp"
                android:id="@+id/rv_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:padding="16dp" />

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/ll_recomend_nav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@drawable/background_border_white"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_choose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:text="Pilih Produk Rekomendasi" />

                    <ImageView
                        android:id="@+id/iv_rekomen"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/ic_arrow" />

                </LinearLayout>

                <id.halalvestor.ui.NonScrollExpandableListView
                    android:id="@+id/expandable_list"
                    android:groupIndicator="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_background_white_shadow" />
            </LinearLayout>

            <!--LinearLayout
                android:layout_below="@+id/ll1"
                android:id="@+id/ll_recomended_show_full"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:visibility="gone">

                <TextView
                    android:background="@drawable/round_background_white_shadow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Tampilkan Semua Produk"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout-->

        </RelativeLayout>
    </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>
