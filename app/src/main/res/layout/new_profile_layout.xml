<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DDD"
                    android:orientation="horizontal">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginBottom="10dp"
                        app:srcCompat="@drawable/pp_account" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hai, Laras Sandra!"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_occupation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Karyawan Swasta"
                        android:textAlignment="center"
                        android:textSize="16dp" />
                </LinearLayout>

            </FrameLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <Button
                    android:id="@+id/btn_change"
                    android:layout_width="160dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_style_default"
                    android:text="Ubah Profile"
                    android:layout_marginBottom="16dp"
                    android:textColor="#FFF" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pendapatan Bulanan"
                                android:textAlignment="center"
                                android:textColor="#333333"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/tv_monthly_income"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Rp. 5.000.000"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimary"
                                android:textSize="24dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_edit_monthly_installment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="ubah"
                                    android:textAlignment="textEnd"
                                    android:textColor="@color/colorPrimary" />

                                <ImageView
                                    android:id="@+id/iv_edit_monthly_installment"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginRight="5dp"
                                    android:paddingLeft="10dp"
                                    app:srcCompat="@drawable/ic_edit" />
                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:background="@color/colorPrimary"
                            android:orientation="horizontal"></LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Usia"
                                    android:textAlignment="center"
                                    android:textColor="#333333" />

                                <TextView
                                    android:id="@+id/tv_age"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="25 Tahun"
                                    android:textAlignment="center"
                                    android:textColor="#666666" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Status"
                                    android:textAlignment="center"
                                    android:textColor="#333333" />

                                <TextView
                                    android:id="@+id/tv_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Lajang"
                                    android:textAlignment="center"
                                    android:textColor="#666666" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Profil Resiko"
                                    android:textAlignment="center"
                                    android:textColor="#333333" />

                                <TextView
                                    android:id="@+id/tv_education"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Universitas"
                                    android:textAlignment="center"
                                    android:textColor="#666666" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/colorPrimary"
                            android:orientation="horizontal"></LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/btn_resurvey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="isi ulang kuesioner"
                                android:textColor="@color/colorPrimaryDark"></TextView>


                            <ImageView
                                android:id="@+id/iv_lihat_petunjuk"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_centerInParent="true"
                                android:paddingLeft="4dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/blue_dots" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/round_background_light"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rekomendasi Investasi"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/chart"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:layout_weight="35" />

                        <LinearLayout
                            android:id="@+id/ll_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical|center_horizontal|center"
                            android:orientation="vertical">

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="#FAC32A"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"></LinearLayout>

                    <android.support.v7.widget.CardView
                        android:layout_marginBottom="16dp"
                        app:cardElevation="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/ik"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="8dp"
                                    android:text="Investasi per bulan"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="12dp"
                                    android:gravity="start" />

                                <TextView
                                    android:id="@+id/tv_investment_amount"
                                    android:paddingLeft="8dp"
                                    android:textAlignment="textStart"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rp. 500.000"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="20dp"
                                    android:gravity="start" />

                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/ok"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_alignParentRight="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/investment" />
                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                    <RelativeLayout
                        android:id="@+id/progress_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/layout_progress"
                        android:background="@drawable/round_background_lighter_blue"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/triangle_shape"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/triangle"
                            android:gravity="center_horizontal"
                            android:rotation="180" />

                        <LinearLayout
                            android:id="@+id/investment_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical"
                            android:paddingBottom="16dp"
                            android:paddingTop="24dp">

                            <TextView
                                android:id="@+id/lbl_investment_goal_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/triangle_shape"
                                android:text="Rincian Investasi"
                                android:textAlignment="textStart"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18dp"
                                android:padding="8dp"
                                android:gravity="start" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1.5dp"
                                android:background="@color/grey"
                                android:orientation="horizontal"></LinearLayout>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_background_light"
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp">

                    <TextView
                        android:id="@+id/tv_tujuan_investasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rekomendasi Asuransi"
                        android:textAlignment="center"
                        android:textSize="18dp" />

                    <ImageView
                        android:paddingTop="16dp"
                        android:layout_gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/asurance_menu_1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:text="Asuransi kesehatan dengan premi"
                        android:textAlignment="center"
                        android:textColor="#333333"
                        android:textSize="16dp" />


                    <TextView
                        android:id="@+id/rekomendasi_asuransi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:text="Rp. 600.000 / bulan"
                        android:textAlignment="center"
                        android:textColor="@color/grey"
                        android:textSize="16dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
