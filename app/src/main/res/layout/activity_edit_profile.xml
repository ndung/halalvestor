<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/blue_box"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar_default"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="60dp"
                            android:background="@drawable/round_background_light"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="32dp"
                                android:text="Informasi akun"
                                android:textAlignment="textStart"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_reg_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Member sejak Agustus 2016"
                                android:textAlignment="center"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:text="Nama"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_edit_nama"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="end"
                                        android:text="ubah"
                                        android:textAlignment="textEnd"
                                        android:textColor="@color/colorPrimary" />

                                    <ImageView
                                        android:id="@+id/iv_edit_nama"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_marginRight="5dp"
                                        android:paddingLeft="10dp"
                                        app:srcCompat="@drawable/ic_edit" />


                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_nama"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Laras" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:text="No HP"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_edit_nohp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="end"
                                        android:text="ubah"
                                        android:textAlignment="textEnd"
                                        android:textColor="@color/colorPrimary" />

                                    <ImageView
                                        android:id="@+id/iv_edit_nohp"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_marginRight="5dp"
                                        android:paddingLeft="10dp"
                                        app:srcCompat="@drawable/ic_edit" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_no_hp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="08123456789" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:text="Email"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_edit_email"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="end"
                                        android:text="ubah"
                                        android:textAlignment="textEnd"
                                        android:textColor="@color/colorPrimary" />

                                    <ImageView
                                        android:id="@+id/iv_edit_email"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_marginRight="5dp"
                                        android:paddingLeft="10dp"
                                        app:srcCompat="@drawable/ic_edit" />


                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="laras.sandra@gmail.com" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:text="Password"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_edit_password"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="end"
                                        android:text="ubah"
                                        android:textAlignment="textEnd"
                                        android:textColor="@color/colorPrimary" />

                                    <ImageView
                                        android:id="@+id/iv_edit_password"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_marginRight="5dp"
                                        android:paddingLeft="10dp"
                                        app:srcCompat="@drawable/ic_edit" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="16dp"
                                    android:scaleType="fitCenter"
                                    app:srcCompat="@drawable/password" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="16dp"
                                android:layout_marginTop="16dp"
                                android:background="@color/colorPrimary"
                                android:orientation="horizontal">

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_trx_history"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pengaturan Keamanan"
                                    android:textColor="@color/colorPrimaryDark"></TextView>

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:layout_marginTop="16dp"
                                android:background="@drawable/bg_gradient_90"
                                android:orientation="vertical">


                                <RelativeLayout
                                    android:id="@+id/triangle_shape"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@drawable/triangle"
                                    android:gravity="center_horizontal"
                                    android:rotation="180" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingTop="32dp">

                                    <ImageView
                                        android:id="@+id/iv_fingerprint"
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:layout_centerInParent="true"
                                        android:layout_gravity="center_horizontal"
                                        app:srcCompat="@drawable/ic_finger_print_hd" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/iv_fingerprint"
                                        android:padding="16dp"
                                        android:text="FINGERPRINT ID"
                                        android:textAlignment="center"
                                        android:textColor="#fff"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/iv_fingerprint"
                                        android:text="@string/fingerprint_text"
                                        android:textAlignment="center"
                                        android:textColor="#fff" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:padding="16dp">

                                        <Button
                                            android:id="@+id/btn_change"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="5dp"
                                            android:layout_weight="1"
                                            android:background="@drawable/button_style_default"
                                            android:text="Ubah"
                                            android:textAllCaps="false"
                                            android:textColor="@color/white" />

                                        <!--Button
                                android:id="@+id/btn_remove"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/button_style_default"
                                android:text="Hapus"
                                android:textColor="@color/white" /-->
                                    </LinearLayout>

                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/imageView"
                                        android:layout_width="200dp"
                                        android:layout_height="100dp"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_gravity="center_vertical|center_horizontal"
                                        app:srcCompat="@drawable/profile" />

                                    <ImageView
                                        android:id="@+id/imageView3"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_alignEnd="@+id/imageView"
                                        android:layout_alignRight="@+id/imageView"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="33dp"
                                        android:layout_marginRight="33dp"
                                        android:background="@drawable/round_background_black_soft"
                                        android:padding="3dp"
                                        app:srcCompat="@android:drawable/ic_menu_camera" />
                                </RelativeLayout>

                            </LinearLayout>

                        </FrameLayout>
                    </RelativeLayout>

                </LinearLayout>


            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
