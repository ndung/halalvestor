<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_tabungan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:id="@+id/ll_tabungan_in"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Title"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/iv_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/ic_close_primary" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Target waktu yang diperlukan (dalam tahun)"
            android:textColor="@color/greyDark"
            android:textSize="12dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_minus"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_decrease"/>

            <com.xw.repo.BubbleSeekBar
                android:id="@+id/qty"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:bsb_bubble_color="@color/colorPrimary"
                app:bsb_bubble_text_color="@color/colorPrimaryDark"
                app:bsb_max="10"
                app:bsb_min="0"
                app:bsb_progress="0"
                app:bsb_section_text_position="bottom_sides"
                app:bsb_show_section_text="true"
                app:bsb_show_thumb_text="true"
                app:bsb_show_progress_in_float="false"
                app:bsb_hide_bubble="true"
                app:bsb_touch_to_seek="true"
                app:bsb_auto_adjust_section_mark="true"
                app:bsb_is_float_type="false"
                app:bsb_thumb_text_color="@color/colorPrimary"
                app:bsb_track_color="@color/colorPrimaryDark"/>

            <ImageView
                android:id="@+id/iv_plus"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_increase"/>

        </RelativeLayout>

