<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/ll_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_gradient_90"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/lbl_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="8dp"
                            android:text="Progres Anda"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="16dp" />

                        <ImageView
                            android:id="@+id/wallet_ico"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/lbl_progress"
                            android:layout_centerInParent="true"
                            android:scaleType="fitEnd"
                            android:src="@drawable/wallet_white" />

                        <TextView
                            android:id="@+id/lbl_total_investasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lbl_progress"
                            android:layout_toRightOf="@id/wallet_ico"
                            android:paddingBottom="4dp"
                            android:paddingLeft="4dp"
                            android:text="Total investasi:"
                            android:textColor="#fff"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tv_investment_goal_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lbl_total_investasi"
                            android:layout_toRightOf="@id/wallet_ico"
                            android:paddingLeft="4dp"
                            android:text="Rp.100.000.000,-"
                            android:textColor="#fff"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:id="@+id/layout_progress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_investment_goal_amount"
                            android:layout_marginRight="20dp"
                            android:clipChildren="true"
                            android:clipToPadding="false"
                            android:orientation="vertical"
                            android:paddingBottom="8dp"
                            android:paddingTop="4dp">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/recycler_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="35dp"
                                    android:clipToPadding="false"
                                    android:orientation="horizontal" />

                                <ProgressBar
                                    android:id="@+id/progressBar"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="35dp"
                                    android:max="100"
                                    android:progress="20"
                                    android:progressDrawable="@drawable/progressbar_custom_primary" />
                            </RelativeLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/lbl_progress"
                            android:background="@drawable/circle_bg_white"
                            android:gravity="center"
                            android:text="17%"
                            android:textColor="#fff"
                            android:textSize="28dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/layout_progress"
                            android:layout_centerInParent="true"
                            android:background="@drawable/round_background_light"
                            android:orientation="vertical"
                            android:paddingBottom="24dp"
                            android:paddingTop="32dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/triangle_shape"
                                android:text="Lama Investasi"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/tv_investment_goal_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="10 Tahun"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimary"
                                android:textSize="30dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/round_background_primary"
                    android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_tujuan_investasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="16dp"
                            android:text="Tujuan Investasi"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="18dp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_tujuan_investasi"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_edit_investment_goals"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="ubah"
                                android:textAlignment="textEnd"
                                android:textColor="@color/white" />

                            <ImageView
                                android:id="@+id/iv_edit_investment_goals"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginRight="5dp"
                                android:paddingLeft="10dp"
                                android:tint="@color/white"
                                app:srcCompat="@drawable/ic_edit" />
                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv"
                            android:layout_marginBottom="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
