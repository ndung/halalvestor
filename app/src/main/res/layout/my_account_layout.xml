<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/blue_box"
        android:orientation="horizontal" />

    <include layout="@layout/toolbar_default" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/mooo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="100dp"
                    android:background="@drawable/round_background_light"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="32dp"
                        android:text="Informasi akun"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_reg_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Member sejak Agustus 2016"
                        android:textAlignment="center"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/colorPrimary"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="Nama"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_edit_nama"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="ubah"
                                android:textAlignment="textEnd"
                                android:textColor="@color/colorPrimary" />

                            <ImageView
                                android:id="@+id/iv_edit_nama"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginRight="5dp"
                                android:paddingLeft="10dp"
                                app:srcCompat="@drawable/ic_edit" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Laras" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="No HP"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_edit_nohp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="ubah"
                                android:textAlignment="textEnd"
                                android:textColor="@color/colorPrimary" />

                            <ImageView
                                android:id="@+id/iv_edit_nohp"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginRight="5dp"
                                android:paddingLeft="10dp"
                                app:srcCompat="@drawable/ic_edit" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_no_hp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="08123456789" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="Email"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_edit_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="ubah"
                                android:textAlignment="textEnd"
                                android:textColor="@color/colorPrimary" />

                            <ImageView
                                android:id="@+id/iv_edit_email"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginRight="5dp"
                                android:paddingLeft="10dp"
                                app:srcCompat="@drawable/ic_edit" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="laras.sandra@gmail.com" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="Password"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_edit_password"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="ubah"
                                android:textAlignment="textEnd"
                                android:textColor="@color/colorPrimary" />

                            <ImageView
                                android:id="@+id/iv_edit_password"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginRight="5dp"
                                android:paddingLeft="10dp"
                                app:srcCompat="@drawable/ic_edit" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="16dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/password" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tv_trx_history"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pengaturan Keamanan"
                            android:textColor="@color/colorPrimaryDark"></TextView>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/colorPrimary"
                        android:orientation="horizontal" />

                    <TextView
                        android:id="@+id/tv_fingerprint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Fingerprint ID"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/grey"
                        android:orientation="horizontal" />

                    <TextView
                        android:id="@+id/tv_pin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="PIN"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/grey"
                        android:orientation="horizontal" />

                    <Button
                        android:id="@+id/btn_change"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/button_style_default"
                        android:gravity="center"
                        android:text="SIMPAN"
                        android:textColor="#FFF" />

                </LinearLayout>

                <FrameLayout
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="200dp"
                                android:layout_height="100dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_vertical|center_horizontal"
                                app:srcCompat="@drawable/pp_account" />

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignEnd="@+id/imageView"
                                android:layout_alignRight="@+id/imageView"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="33dp"
                                android:layout_marginRight="33dp"
                                android:background="@drawable/round_background_black_soft"
                                android:padding="3dp"
                                app:srcCompat="@android:drawable/ic_menu_camera" />
                        </RelativeLayout>

                    </LinearLayout>

                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
