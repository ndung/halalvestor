<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DDD"
                    android:orientation="horizontal">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginBottom="10dp"
                        app:srcCompat="@drawable/profile" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hai, Laras Sandra!"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_occupation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Karyawan Swasta"
                        android:textAlignment="center"
                        android:textSize="16dp" />
                </LinearLayout>

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pendapatan Bulanan"
                                android:textAlignment="center"
                                android:textColor="#333333"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/tv_monthly_income"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Rp. 5.000.000"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimary"
                                android:textSize="24dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_edit_monthly_installment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="ubah"
                                    android:textAlignment="textEnd"
                                    android:textColor="@color/colorPrimary" />

                                <ImageView
                                    android:id="@+id/iv_edit_monthly_installment"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginRight="5dp"
                                    android:paddingLeft="10dp"
                                    app:srcCompat="@drawable/ic_edit" />
                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:background="@color/colorPrimary"
                            android:orientation="horizontal"></LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Usia"
                                    android:textAlignment="center"
                                    android:textColor="#333333" />

                                <TextView
                                    android:id="@+id/tv_age"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="25 Tahun"
                                    android:textAlignment="center"
                                    android:textColor="#666666" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Status"
                                    android:textAlignment="center"
                                    android:textColor="#333333" />

                                <TextView
                                    android:id="@+id/tv_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Lajang"
                                    android:textAlignment="center"
                                    android:textColor="#666666" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Profil Resiko"
                                    android:textAlignment="center"
                                    android:textColor="#333333" />

                                <TextView
                                    android:id="@+id/tv_education"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Universitas"
                                    android:textAlignment="center"
                                    android:textColor="#666666" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/colorPrimary"
                            android:orientation="horizontal"></LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/btn_resurvey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="isi ulang kuesioner"
                                android:textColor="@color/colorPrimaryDark"></TextView>


                            <ImageView
                                android:id="@+id/iv_lihat_petunjuk"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_centerInParent="true"
                                android:paddingLeft="4dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/blue_dots" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:id="@+id/ll_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_gradient_90"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/lbl_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="8dp"
                            android:text="Progres Anda"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="16dp" />

                        <ImageView
                            android:id="@+id/wallet_ico"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/lbl_progress"
                            android:layout_centerInParent="true"
                            android:scaleType="fitEnd"
                            android:src="@drawable/wallet_white" />

                        <TextView
                            android:id="@+id/lbl_total_investasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lbl_progress"
                            android:layout_toRightOf="@id/wallet_ico"
                            android:paddingBottom="4dp"
                            android:paddingLeft="4dp"
                            android:text="Total investasi:"
                            android:textColor="#fff"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tv_investment_goal_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lbl_total_investasi"
                            android:layout_toRightOf="@id/wallet_ico"
                            android:paddingLeft="4dp"
                            android:text="Rp.100.000.000,-"
                            android:textColor="#fff"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:id="@+id/layout_progress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_investment_goal_amount"
                            android:layout_marginRight="20dp"
                            android:clipChildren="true"
                            android:clipToPadding="false"
                            android:orientation="vertical"
                            android:paddingBottom="8dp"
                            android:paddingTop="4dp">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/recycler_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="35dp"
                                    android:clipToPadding="false"
                                    android:orientation="horizontal" />

                                <ProgressBar
                                    android:id="@+id/progressBar"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="35dp"
                                    android:max="100"
                                    android:progress="20"
                                    android:progressDrawable="@drawable/progressbar_custom_primary" />
                            </RelativeLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/lbl_progress"
                            android:background="@drawable/circle_bg_white"
                            android:gravity="center"
                            android:text="17%"
                            android:textColor="#fff"
                            android:textSize="28dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/layout_progress"
                            android:layout_centerInParent="true"
                            android:background="@drawable/round_background_light"
                            android:orientation="vertical"
                            android:paddingBottom="24dp"
                            android:paddingTop="32dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/triangle_shape"
                                android:text="Lama Investasi"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/tv_investment_goal_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="10 Tahun"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimary"
                                android:textSize="30dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/round_background_light"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Profil Investasi Anda"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_edit_investment_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="ubah"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorPrimary" />

                        <ImageView
                            android:id="@+id/iv_edit_investment_profile"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="5dp"
                            android:paddingLeft="10dp"
                            android:tint="@color/colorPrimary"
                            app:srcCompat="@drawable/ic_edit" />
                    </LinearLayout>

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/chart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="@color/colorPrimaryDark"
                        android:orientation="horizontal"></LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:text="You're on your way"
                        android:textAlignment="center"
                        android:textColor="#333333"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pertahankan investasi anda!"
                        android:textAlignment="center"
                        android:textColor="#666666"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="@drawable/round_background_primary"
                    android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_tujuan_investasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tujuan Investasi"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="18dp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_tujuan_investasi"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_edit_investment_goals"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="ubah"
                                android:textAlignment="textEnd"
                                android:textColor="@color/white" />

                            <ImageView
                                android:id="@+id/iv_edit_investment_goals"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginRight="5dp"
                                android:paddingLeft="10dp"
                                android:tint="@color/white"
                                app:srcCompat="@drawable/ic_edit" />
                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
