<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/blue_box"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_default" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:background="@drawable/round_background_light"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:id="@+id/tv_product_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingBottom="16dp"
                                    android:text="Batavia Dana Saham"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="20dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="1.5dp"
                                    android:background="@color/colorPrimary"
                                    android:orientation="horizontal"></LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingBottom="16dp"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="16dp"
                                    android:text="@string/change_nohp_text" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/round_background_lighter_blue"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_gravity="center_horizontal"
                                        android:background="@drawable/triangle"
                                        android:gravity="center_horizontal"
                                        android:rotation="180" />

                                    <TableLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="16dp">

                                        <TableRow
                                            android:padding="4dp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Tipe " />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text=" : " />


                                            <TextView
                                                android:id="@+id/tv_product_type"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="Reksadana Saham"
                                                android:textColor="@color/colorPrimary" />

                                        </TableRow >

                                        <TableRow
                                            android:padding="4dp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="NAB" />


                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text=" : " />

                                            <TextView
                                                android:id="@+id/tv_product_nab"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="56.0001" />

                                        </TableRow>

                                        <TableRow
                                            android:padding="4dp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Total" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text=" : " />

                                            <TextView
                                                android:id="@+id/tv_product_own"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="100 Dana Saham" />
                                        </TableRow>


                                        <TableRow
                                            android:padding="4dp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Growth" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text=" : " />

                                            <TextView
                                                android:id="@+id/tv_product_growth"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="50 %"
                                                android:textColor="@color/green" />
                                        </TableRow>
                                    </TableLayout>

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:layout_margin="16dp"
                            android:background="@drawable/round_background_light"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="16dp"
                                    android:text="Performa Produk"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="18dp" />

                                <android.support.design.widget.TabLayout
                                    android:id="@+id/tabLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </android.support.design.widget.TabLayout>

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:text="1,156,00"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <com.github.mikephil.charting.charts.LineChart
                                    android:id="@+id/chart"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="16dp"
                            android:background="@drawable/round_background_primary"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/bg_gradient_90"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="16dp"
                                    android:text="Atur Jumlah Investasi"
                                    android:textAlignment="center"
                                    android:textColor="#ffffff"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />

                                <id.halalvestor.ui.QuantityView
                                    android:id="@+id/quantityView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:textStyle="bold"
                                    app:qv_addButtonBackground="@android:color/transparent"
                                    app:qv_addButtonTextColor="#FFF"
                                    app:qv_quantity="0"
                                    app:qv_quantityBackground="@drawable/round_background_light"
                                    app:qv_quantityTextColor="@color/colorPrimary"
                                    app:qv_removeButtonBackground="@android:color/transparent"
                                    app:qv_removeButtonTextColor="#FFF" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Total investasi anda sekarang dsini"
                                    android:textAlignment="center"
                                    android:textColor="#ffffff"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tv_own_amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:paddingBottom="14dp"
                                    android:text="Rp. XXX,XXX,-"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="16dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="1.5dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:background="#FAC32A"
                                    android:orientation="horizontal"></LinearLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/iv_collapse"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="20dp"
                                        app:srcCompat="@drawable/ic_group_collapse_05" />

                                    <TextView
                                        android:id="@+id/tv_monthly_investment"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="8dp"
                                        android:paddingTop="8dp"
                                        android:text="Investasi per bulan : Rp 500.000,-"
                                        android:textAlignment="center"
                                        android:textColor="#ffffff"
                                        android:textStyle="bold" />
                                </RelativeLayout>

                                <LinearLayout
                                    android:id="@+id/ll_detail"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:visibility="gone">

                                    <android.support.v7.widget.RecyclerView
                                        android:id="@+id/rv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:padding="16dp">

                                    <Button
                                        android:id="@+id/bt_jual"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/button_style_default"
                                        android:text="Jual"
                                        android:textColor="@color/white" />

                                    <Button
                                        android:id="@+id/bt_beli"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/button_style_default"
                                        android:text="Beli"
                                        android:textColor="@color/white" />
                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

        </FrameLayout>

    </LinearLayout>

</FrameLayout>
