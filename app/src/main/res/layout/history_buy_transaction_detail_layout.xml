<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/blue_box"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar_default"
            layout_width="match_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/ll_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_background_light"
                        android:padding="16dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_order_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Waktu Order 01-Sep-2017 | 12:05:12 WIB"
                                android:textColor="#9e9e9e" />

                            <TextView
                                android:id="@+id/tv_product_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Batavia Dana Saham"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_order_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Order No. 1708250802" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/layout_progress"
                                android:layout_marginTop="16dp"
                                android:background="@drawable/round_background_blue"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:id="@+id/triangle_shape"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@drawable/triangle"
                                    android:gravity="center_horizontal"
                                    android:rotation="180" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_margin="20dp"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:id="@+id/iv_investment_manager"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:srcCompat="@mipmap/ic_manager_investasi" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_centerVertical="true"
                                            android:layout_toEndOf="@+id/iv_investment_manager"
                                            android:layout_toRightOf="@+id/iv_investment_manager"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/label_investment_manager"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_toEndOf="@+id/iv_investment_manager"
                                                android:layout_toRightOf="@+id/iv_investment_manager"
                                                android:text="Manager Investasi"
                                                android:textColor="#9e9e9e"
                                                android:textSize="12sp" />

                                            <TextView
                                                android:id="@+id/tv_investment_manager"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/label_investment_manager"
                                                android:layout_toEndOf="@+id/iv_investment_manager"
                                                android:layout_toRightOf="@+id/iv_investment_manager"
                                                android:text="BNP Paribas Investment Partners" />

                                        </LinearLayout>

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:id="@+id/iv_product_type"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:srcCompat="@mipmap/ic_jenis_produk" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_centerVertical="true"
                                            android:layout_toEndOf="@+id/iv_product_type"
                                            android:layout_toRightOf="@+id/iv_product_type"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/label_product_type"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_toEndOf="@+id/iv_product_type"
                                                android:layout_toRightOf="@+id/iv_product_type"
                                                android:text="Jenis Produk"
                                                android:textColor="#9e9e9e"
                                                android:textSize="12sp" />

                                            <TextView
                                                android:id="@+id/tv_product_type"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/label_product_type"
                                                android:layout_toEndOf="@+id/iv_product_type"
                                                android:layout_toRightOf="@+id/iv_product_type"
                                                android:text="Reksa Dana Saham" />

                                        </LinearLayout>

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:id="@+id/iv_instruction"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:srcCompat="@mipmap/ic_instruksi" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_centerVertical="true"
                                            android:layout_toEndOf="@+id/iv_instruction"
                                            android:layout_toRightOf="@+id/iv_instruction"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/label_instruction"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_toEndOf="@+id/iv_instruction"
                                                android:layout_toRightOf="@+id/iv_instruction"
                                                android:text="Instruksi"
                                                android:textColor="#9e9e9e"
                                                android:textSize="12sp" />

                                            <TextView
                                                android:id="@+id/tv_instruction"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/label_instruction"
                                                android:layout_toEndOf="@+id/iv_instruction"
                                                android:layout_toRightOf="@+id/iv_instruction"
                                                android:text="Subcription" />

                                        </LinearLayout>

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:id="@+id/iv_unit"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:srcCompat="@mipmap/ic_jumlah_unit" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_centerVertical="true"
                                            android:layout_toEndOf="@+id/iv_unit"
                                            android:layout_toRightOf="@+id/iv_unit"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/label_unit"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_toEndOf="@+id/iv_unit"
                                                android:layout_toRightOf="@+id/iv_unit"
                                                android:text="Jumlah Unit"
                                                android:textColor="#9e9e9e"
                                                android:textSize="12sp" />

                                            <TextView
                                                android:id="@+id/tv_unit"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/label_unit"
                                                android:layout_toEndOf="@+id/iv_unit"
                                                android:layout_toRightOf="@+id/iv_unit"
                                                android:text="1.604.701" />

                                        </LinearLayout>

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:id="@+id/iv_net_amount"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:srcCompat="@mipmap/ic_nilai_bersih" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_centerVertical="true"
                                            android:layout_toEndOf="@+id/iv_net_amount"
                                            android:layout_toRightOf="@+id/iv_net_amount"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/label_net_amount"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_toEndOf="@+id/iv_net_amount"
                                                android:layout_toRightOf="@+id/iv_net_amount"
                                                android:text="Nilai Pembelian Bersih"
                                                android:textColor="#9e9e9e"
                                                android:textSize="12sp" />

                                            <TextView
                                                android:id="@+id/tv_net_amount"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/label_net_amount"
                                                android:layout_toEndOf="@+id/iv_net_amount"
                                                android:layout_toRightOf="@+id/iv_net_amount"
                                                android:text="IDR 1.000.000,- " />

                                        </LinearLayout>

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:id="@+id/iv_buying_price"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:srcCompat="@mipmap/ic_biaya_pembelian" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_centerVertical="true"
                                            android:layout_toEndOf="@+id/iv_buying_price"
                                            android:layout_toRightOf="@+id/iv_buying_price"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/label_buying_price"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_toEndOf="@+id/iv_buying_price"
                                                android:layout_toRightOf="@+id/iv_buying_price"
                                                android:text="Biaya Pembelian"
                                                android:textColor="#9e9e9e"
                                                android:textSize="12sp" />

                                            <TextView
                                                android:id="@+id/tv_buying_price"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/label_buying_price"
                                                android:layout_toEndOf="@+id/iv_buying_price"
                                                android:layout_toRightOf="@+id/iv_buying_price"
                                                android:text="Reksa Dana Saham" />

                                        </LinearLayout>

                                    </RelativeLayout>
                                </LinearLayout>
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/label_buying_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="Total Pembelian"
                                android:textAlignment="center"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tv_buying_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="IDR 1.000.000,-"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimary"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/label_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="Status"
                                android:textAlignment="center"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="completed"
                                android:textColor="@color/green"
                                android:textAlignment="center" />

                        </LinearLayout>

                    </RelativeLayout>

                    <Button
                        android:id="@+id/btn_download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/button_style_default"
                        android:padding="16dp"
                        android:text="download PDF"
                        android:textColor="#FFF" />

                </LinearLayout>


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

</FrameLayout>
