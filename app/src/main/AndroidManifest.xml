        <activity android:name="id.halalvestor.activity.main.investment.auth.InvestmentAuthLoginActivity" />
        <activity android:name="id.halalvestor.activity.main.insurance.InsuranceShopListActivity" />
        <activity android:name="id.halalvestor.activity.main.insurance.InsuranceShopDetailActivity" />
        <activity android:name="id.halalvestor.activity.main.insurance.InsuranceSummaryDetailActivity" />
        <activity android:name="id.halalvestor.activity.main.insurance.InsuranceMedicalHistoryActivity" />
        <activity android:name="id.halalvestor.activity.main.insurance.InsurancePolisDataHolderActivity" />
        <activity android:name="id.halalvestor.activity.main.insurance.InsurancePolisDataInsuredActivity" />
        <activity android:name="id.halalvestor.activity.main.NotificationActivity" />
        <activity android:name="id.halalvestor.activity.main.AccountActivity" />
        <activity android:name="id.halalvestor.activity.main.insurance.InsuranceHistoryDetailActivity" />
        <activity android:name="id.halalvestor.activity.main.PortfolioInvestmentActivity" />
        <activity android:name="id.halalvestor.activity.main.history.InsuranceCompletedBuyActivity" />
        <activity android:name="id.halalvestor.activity.main.history.InsuranceOngoingBuyActivity"></activity>
        <activity android:name="id.halalvestor.activity.main.investment.buysell.SellDetailTransactionRevActivity"></activity>
        <activity
            android:name="com.thefinestartist.finestwebview.FinestWebViewActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="sensor"
            android:theme="@style/FinestWebViewTheme.Light" />
    </application>

</manifest>